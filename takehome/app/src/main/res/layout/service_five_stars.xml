<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/five_stars_frame_layout"
    android:layout_width="@dimen/five_star_size"
    android:layout_height="@dimen/five_star_size">

    <FrameLayout
        android:id="@+id/cordova_container"
        android:layout_width="256dp"
        android:layout_height="256dp"
        android:background="@android:color/darker_gray"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/close_btn"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/ic_close_24dp"
        app:civ_circle_background_color="@android:color/white"
        app:layout_constraintStart_toEndOf="@+id/cordova_container"
        app:layout_constraintTop_toTopOf="parent" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/move_btn"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/ic_move_24dp"
        app:civ_circle_background_color="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/cordova_container" />

</android.support.constraint.ConstraintLayout>